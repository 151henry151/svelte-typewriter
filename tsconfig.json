{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "removeComments": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "@svelte-typewriter/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
