{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "outDir": "lib",
    "removeComments": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "rootDir": "src",
  },
  "include": ["src/**/*"]
}
