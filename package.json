{
	"name": "svelte-typewriter",
	"description": "A simple and reusable typewriter effect for your Svelte applications",
	"keywords": [
		"svelte",
		"typewriter-effect"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/henriquehbr/svelte-typewriter"
	},
	"version": "2.4.5",
	"svelte": "src/Typewriter.svelte",
	"module": "lib/svelte-typewriter.es.js",
	"main": "lib/svelte-typewriter.cjs.js",
	"types": "types/index.d.ts",
	"type": "module",
	"author": "Henrique Borges <henriqueborgeshbr@gmail.com>",
	"license": "MIT",
	"files": [
		"lib"
	],
	"scripts": {
		"bump:patch": "cross-env HUSKY_SKIP_HOOKS=1 npm version patch",
		"bump:minor": "cross-env HUSKY_SKIP_HOOKS=1 npm version minor",
		"bump:major": "cross-env HUSKY_SKIP_HOOKS=1 npm version major",
		"version": "npm run changelog -p",
		"postversion": "yes \"\" | npm publish",
		"changelog": "auto-changelog --template keepachangelog -l false --hide-credit",
		"postchangelog": "git add CHANGELOG.md",
		"amend-changelog": "cross-env HUSKY_SKIP_HOOKS=1 git commit --amend --no-edit --no-verify",
		"build": "vite build",
		"dev": "cd example && npm i && npm run dev",
		"start": "cd example && npm i && npm run build && npm run start",
		"example:build": "cd example && npm i && npm run build",
		"prepublishOnly": "npm run build",
		"prettier": "prettier --write \"./src/**/*.js\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run prettier && npm run build && git add .",
			"post-commit": "npm run changelog -u && npm run amend-changelog",
			"pre-push": "cross-env HUSKY_SKIP_HOOKS=1 git push --tags"
		}
	},
	"devDependencies": {
		"@svitejs/vite-plugin-svelte": "^0.10.0",
		"auto-changelog": "^2.2.1",
		"cross-env": "^7.0.3",
		"husky": "^4.3.6",
		"prettier": "^2.2.1",
		"prettier-plugin-svelte": "^1.4.2",
		"svelte": "^3.31.1",
		"vite": "^2.0.5"
	}
}
